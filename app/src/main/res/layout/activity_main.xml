<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.keithfinnegan.assign3_2017.MainActivity">


        <TextView
            android:id="@+id/chemistList"
            style="@style/CategoryText"
            android:text="Chemist List"
            android:background="@color/category_list"
            android:onClick="openList"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/orderPrescription"
            style="@style/CategoryText"
            android:text="Order Prescription"
            android:background="@color/category_prescription"
            android:onClick="openSpinner"

            android:layout_weight="1" />






    </LinearLayout>

</ScrollView>